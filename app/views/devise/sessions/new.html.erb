<h3>Log in</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %><br />
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %><br />
  </div><br />

  <div class="actions">
    <%= f.submit "Log in", class: "myButton" %>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>
